<!DOCTYPE html>
<html lang="en">
    <head><title>Booksology</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/public/style.css" rel="stylesheet" type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        
        </head>
 <body>
    
    
    <nav>

        <div class="links">
            <a href="/"><label>Home</label></a>
            {{#if loggedIn}}
            <button id="logout" class="btn-no-style">Logout</button>
            {{else}}
            <a href="/login"><label>Login</label></a>
            {{/if}}
            </div>

    </nav>

    <div class="row">
        <div class="col-auto">
            <h2>Welcome, {{name}}</h2>
        </div>
    </div>

    <div class="row-mt-4">
        <div class="col-md-6">
            <h3>Please create your Booklist:</h3>

            <form class="form booklist-form">
                <div class="form-group">
                    <label for="book-name">Book name:</label>
                    <input class="form-input" type="text" id="book-name" name="book-name"/>
                    </div>
                 
                    <div class="form-group">
                        <label for="author-name">Author name:</label>
                        <input class="form-input" type="text" id="author-name" name="author-name"/>
                    </div>

                    <div class="form-group">
                        <label for="realise-year">Realise year:</label>
                        <input class="form-input" type="text" id="realise-year" name="realise-year"/>
                    </div>

                    <div class="form-group" id="book-button">
                        <button type="submit" class="btn btn-primary book-button"></button> 
                    </div>
            
            </form>
        </div>

        {{#if books.length}}
        <div class="col-md-6 book-list">
            <h3>Current Books:</h3>

            {{#each books as |books|}}
            <div class="row mb-2">
                <div class="col-md-8">
                    <h4><a href="/books/{{book.id}}">{{book.name}}</a> </h4>
                </div>
                <div class="col-md-4">
                <button class="btn btn-md btn-danger" data-name="{{book.name}}">DELETE</button>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>

    
      
      <script src="./js/booklist.js"></script>
      
 </body>
</html>